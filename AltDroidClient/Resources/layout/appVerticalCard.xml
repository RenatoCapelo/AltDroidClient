<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="100dp"
	android:layout_height="match_parent"
	tools:layout_height="150dp"
	android:paddingHorizontal="4dp"
	android:paddingBottom="4dp"
	android:background="@drawable/rectangle"
	>
	
	<ImageView
			android:id="@+id/appVertCard_MainImage"
		  android:layout_width="match_parent"
          android:layout_height="match_parent"
		  android:layout_weight="1"
		  android:src="@drawable/GooglePlayLogo"
			android:padding="5dp"/>
			
	<LinearLayout android:layout_weight="1" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
		<TextView android:id="@+id/appVertCard_Title" android:layout_weight="1" android:textColor="@color/white" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Title" android:textSize="16sp"/>
		<TextView android:id="@+id/appVertCard_Publisher" android:layout_weight="1" android:textColor="@color/white" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Publisher" android:textSize="8sp"/>
		<LinearLayout android:layout_weight="1" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal">
			<TextView android:id="@+id/appVertCard_Rating" android:layout_weight="1" android:textColor="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:text="5.0" android:textSize="16sp" android:textAlignment="center"/>
			<LinearLayout android:layout_weight="1" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
				<Space android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="2"/>
				<ImageView android:layout_weight="1" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/StarIcon"/>
				<Space android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="2"/>
			</LinearLayout>
			<Space android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>