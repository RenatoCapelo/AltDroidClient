<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
        android:layout_weight="9"
        android:id="@+id/main_MainContainer"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/appstogamesbg_transition"
        android:paddingHorizontal="32dp">
            <LinearLayout
                android:id="@+id/main_SearchBoxContainer"
                android:gravity="left"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:orientation="horizontal"
                android:layout_marginVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/rounded_rectangle">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/main_searchTextInput"
                    android:inputType="text"
                    android:hint="Search..."
                    android:textColorHint="#ccc"
                    android:textColor="#000"/>
                <Button
                    android:id="@+id/main_btnProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="5"
                    android:background="@drawable/profilepicture"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apps em Destaque"
                    android:textColor="#fff"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:minHeight="72dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:background="#354F52"
            >
        <Button
            android:id="@+id/main_btnApps"
            
            android:layout_weight="1"
            android:background="#354F52"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="Apps"
            />
        <Button
            android:id="@+id/main_btnGames"
            android:layout_weight="1"
            android:background="#354F52"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="Games"/>
    </LinearLayout>

</LinearLayout>