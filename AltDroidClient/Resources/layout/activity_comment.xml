<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@color/darkestGreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="@color/greenishBlue">
        <ImageView
            android:id="@+id/comments_backArrow"
            android:layout_weight="5"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_back_icon"/>
        <Space
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">
    
        <TextView
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Classificação"
                android:transitionName="classificationTransition"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:gravity="center"
                />
    
        <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
        
            <TextView
                
                    android:paddingHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/comments_Rating"
                    tools:text="5.0"
                    android:transitionName="rating_valueTransition"
                    android:textSize="36sp"
                    android:gravity="center_vertical"
                    android:textColor="#fff"
                    />
    
            <ImageView
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitStart"
                    android:transitionName="star_iconTransition"
                    android:src="@drawable/staricon"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:background="@drawable/bordertopbottom"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:orientation="vertical">
        <TextView
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textColor="@color/fadedGreen"
            android:layout_marginBottom="5dp"
            android:text="Classifique a app"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:paddingHorizontal="64dp">
                <ImageView
                    android:id="@+id/comments_star0"
                    android:src="@mipmap/star"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2.5dp"
                />
                <ImageView
                android:id="@+id/comments_star1"
                    android:src="@mipmap/star"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                android:padding="2.5dp"/>
                <ImageView
                android:id="@+id/comments_star2"
                    android:src="@mipmap/star"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                android:padding="2.5dp"/>
                <ImageView
                android:id="@+id/comments_star3"
                    android:src="@mipmap/star"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                android:padding="2.5dp"/>
                <ImageView
                android:id="@+id/comments_star4"
                    android:src="@mipmap/star"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                android:padding="2.5dp"/>
            <!--<RatingBar
                android:id="@+id/comments_rating"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:isIndicator="false"
            android:backgroundTint="@color/colorAccent"
            android:progressTint="@color/colorAccent"
            android:secondaryProgressTint="@color/colorAccent"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1"/>-->
            </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:textColor="#fff"
                android:id="@+id/comments_Comment"
                android:text="Ainda não efetuou classificação nesta aplicação..."/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tworoundedcorners_rectangle"
        android:paddingTop="16dp"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/comments_rvComments"/>
        
    </LinearLayout>
</LinearLayout>