<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkestGreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="@color/greenishBlue">
        <ImageView
            android:id="@+id/newComment_backArrow"
            android:layout_weight="4"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_back_icon"/>
        <Space
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <Button
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Publish"
                android:id="@+id/newComment_btnPublish"
                style="@style/Base.Widget.AppCompat.Button.Borderless" 
                android:background="@android:color/transparent"/>
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
        android:id="@+id/newComment_AppTitle"
        android:layout_marginVertical="32dp"
        android:paddingHorizontal="64dp"
        android:textSize="24dp"
        android:text="Avaliar nameApp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/fadedGreen"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:paddingHorizontal="64dp"
            android:id="@+id/linearLayout1">
            <ImageView
                android:id="@+id/newComment_star0"
                android:src="@mipmap/star"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2.5dp"
                />
            <ImageView
                android:id="@+id/newComment_star1"
                android:src="@mipmap/star"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2.5dp"/>
            <ImageView
                android:id="@+id/newComment_star2"
                android:src="@mipmap/star"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2.5dp"/>
            <ImageView
                android:id="@+id/newComment_star3"
                android:src="@mipmap/star"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2.5dp"/>
            <ImageView
                android:id="@+id/newComment_star4"
                android:src="@mipmap/star"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2.5dp"/>
        </LinearLayout>
        
        <EditText
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="7.5dp"
            android:layout_width="match_parent"
            android:hint="Descreva a sua experiÃªncia (opcional)"
            android:layout_height="56dp"
            android:textSize="20sp"
            tools:text=""
android:id="@+id/newComent_comment"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="#ffffff"
            android:backgroundTintMode="src_over"
            />

        </LinearLayout>

</LinearLayout>
