<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/greenishbluerectangle"
    android:backgroundTint="@color/darkestGreen">
    <TextView
        android:id="@+id/comment_Author"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Renato Ventura"
        android:textColor="@color/fadedGreen"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/comment_llStars"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                android:id="@+id/comment_star0"
                    android:src="@mipmap/star"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                android:id="@+id/comment_star1"
                    android:src="@mipmap/star"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                android:id="@+id/comment_star2"
                    android:src="@mipmap/star"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                android:id="@+id/comment_star3"
                    android:src="@mipmap/star"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                android:id="@+id/comment_star4"
                    android:src="@mipmap/star"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    <TextView
        android:id="@+id/comment_Message"
        android:textColor="@color/fadedGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="25"
        tools:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Donec quam felis, ultricies nec, pellentesque eu, pretium quis,"
        />
    
</LinearLayout>
