<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/greenishBlue">
        <ImageView
            android:layout_weight="5"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_back_icon"/>
        <Space
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/darkGreen">
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="15dp">
            <ImageView
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/trypsterlogo"/>
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:gravity="bottom"
                    android:textSize="32sp"
                    tools:text="Trypster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1"
                    android:textSize="24sp"
                    tools:text="Gratuito"
                    android:textColor="@color/fadedGreen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tworoundedcorners_rectangle">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/gamesBg">
        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <Button
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="@color/greenishBlue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="download"/>
        <ImageView
            android:src="@drawable/comment"
            android:layout_weight="2"
            android:layout_margin="7.5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>
